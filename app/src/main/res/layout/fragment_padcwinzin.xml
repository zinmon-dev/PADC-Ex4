<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">
    <LinearLayout
        android:id="@+id/li_winzin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="3dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp">
        <ImageView
            android:id="@+id/iv_winzin1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/wizin1"
            android:layout_weight="1"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingTop="8dp"
            android:paddingLeft="8dp">
            <TextView
                android:id="@+id/tv_winzin_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="မၾကည္ျပာႏွင္႔ ခ်စ္ျခင္း၏နဂၢတစ္မ်ား"/>
            <TextView
                android:id="@+id/tv_winzin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="နီကိုရဲ"
                android:layout_below="@+id/tv_winzin_title"
                android:layout_marginTop="8dp"/>
            <Button
                android:id="@+id/btn_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BUY"
                android:layout_below="@id/tv_winzin"
                android:layout_marginTop="32dp"/>
            <Button
                android:id="@+id/btn_sample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SAMPLE"
                android:layout_below="@id/btn_buy"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_filesize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File size :243MB"
        android:layout_below="@+id/li_winzin"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Summary"
        android:layout_below="@+id/tv_filesize"
        android:layout_marginTop="16dp"
        android:textColor="#fd9801"/>
    <TextView
        android:id="@+id/tv_winzindot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=".................."
        android:layout_below="@+id/tv_summary"
        android:layout_marginTop="8dp"
        android:textColor="#fd9801"/>
    <TextView
        android:id="@+id/tv_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ဟာသစာအုပ်အမျဒိးအစား"
        android:layout_below="@+id/tv_winzindot"
        android:layout_marginTop="8dp"
        android:textColor="#fd9801"/>
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_book"
        android:layout_marginTop="50dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wizin2"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wizin3"
            android:layout_marginLeft="8dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wizin4"
            android:layout_marginLeft="8dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wizin2"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>
